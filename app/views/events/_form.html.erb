<%= semantic_form_for @event do |f| %>
<%= f.inputs do %>
<%= f.input :name, :as => :string %>
<%= f.input :start_at, :as => :datetime %>
<%= f.input :end_at, :as => :datetime %>
<%= f.input :all_day, :as => :boolean %>
<%= f.input :description, :as => :text %>
<%= f.input :color, :as => :string %>
<% end %>
<%= f.buttons %>
<% end %>
